<%= form_for(assign) do |f| %>
  <% if assign.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(assign.errors.count, "error") %> prohibited this assign from being saved:</h2>

      <ul>
      <% assign.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :username, prompt: true , class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :app_id %>
    <%= f.collection_select :app_id, App.all, :id, :document_id, prompt: true , class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :duedate %>
    <%= f.date_select :duedate %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
